<?xml version="1.0" encoding="utf-8"?>
<resources>

	<declare-styleable name="BriarRecyclerView">
		<attr name="scrollToEnd" format="boolean" />
		<attr name="emptyText" format="string" />
	</declare-styleable>

	<declare-styleable name="AuthorView">
		<attr name="persona" format="enum">
			<enum name="normal" value="0"/>
			<enum name="reblogger" value="1"/>
			<enum name="commenter" value="2"/>
			<enum name="list" value="3"/>
			<enum name="rss_feed" value="4"/>
			<enum name="rss_feed_reblogged" value="5"/>
		</attr>
	</declare-styleable>

	<declare-styleable name="TextInputView">
		<attr name="hint" format="string"/>
	</declare-styleable>

	<declare-styleable name="LargeTextInputView">
		<attr name="buttonText" format="string"/>
		<attr name="maxLines" format="integer"/>
		<attr name="fillHeight" format="boolean"/>
	</declare-styleable>

	<declare-styleable name="UnreadMessageButton">
		<attr name="direction" format="enum">
			<enum name="up" value="0"/>
			<enum name="down" value="1"/>
		</attr>
	</declare-styleable>

	<declare-styleable name="customAttrs">
		<attr name="splashScreen" format="reference"/>
		<attr name="splashBackground" format="color"/>
		<attr name="textTitleSize" format="dimension"/>
		<attr name="textTitleColor" format="color"/>
		<attr name="window_background" format="color"/>
		<attr name="button_bar_background" format="color"/>
		<attr name="briar_text_primary" format="color"/>
		<attr name="briar_text_secondary" format="color"/>
		<attr name="briar_text_tertiary" format="color"/>
		<attr name="menu_background" format="color"/>
		<attr name="icons_color" format="color"/>
		<attr name="android_primary" format="color"/>
		<attr name="textBodySize" format="dimension"/>
		<attr name="textBodyColor" format="color"/>
		<attr name="qr_code_explanation" format="reference"/>
		<attr name="qr_code_intro" format="reference"/>
		<attr name="contact_disconnected" format="reference"/>
		<attr name="ic_info" format="reference"/>
		<attr name="ic_repeat" format="reference"/>
		<attr name="card_background" format="reference"/>
		<attr name="msg_in" format="reference"/>
		<attr name="msg_in_top" format="reference"/>
		<attr name="private_message_date" format="color"/>
	</declare-styleable>

</resources>